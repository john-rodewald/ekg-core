cabal-version:       2.2
name:                ekg-core
version:             0.1.1.7
synopsis:            Tracking of system metrics
description:
  This library lets you defined and track system metrics.
homepage:            https://github.com/tibbe/ekg-core
bug-reports:         https://github.com/tibbe/ekg-core/issues
license:             BSD-3-Clause
license-file:        LICENSE
author:              Johan Tibell
maintainer:          Johan Tibell <johan.tibell@gmail.com>,
                     Mikhail Glushenkov <mikhail.glushenkov@gmail.com>
category:            System
build-type:          Simple
extra-source-files:  CHANGES.md
tested-with:         GHC == 8.10.2, GHC == 8.8.3, GHC == 8.6.5,
                     GHC == 8.4.4,  GHC == 8.2.2

common common-all
  ghc-options:
    -Wall -Wcompat -Wincomplete-record-updates -Wincomplete-uni-patterns -Wredundant-constraints
  default-language: Haskell2010

common library-build-depends
  build-depends:
    base >= 4.6 && < 4.18,
    atomic-primops ^>= 0.8.4,
    containers >= 0.5 && < 0.7,
    ghc-prim <= 0.10,
    hashable >= 1.3.0.0 && < 1.5,
    inspection-testing ^>= 0.4.2.3,
    primitive ^>= 0.7.1.0,
    text < 3,
    unordered-containers < 0.3

library
  import: common-all, library-build-depends
  exposed-modules:
    System.Metrics
    System.Metrics.Counter
    System.Metrics.Distribution
    System.Metrics.Distribution.Internal
    System.Metrics.Gauge
    System.Metrics.Internal.State
    System.Metrics.Internal.Store
    System.Metrics.Label

  other-modules:
    Data.Array
    Data.Atomic
    System.Metrics.Example
    System.Metrics.GroupExample
    System.Metrics.SimpleExample
    System.Metrics.ThreadId

library ekg-core-benchmark
  import: common-all
  hs-source-dirs: benchmark-lib
  exposed-modules:
    Tasks
  build-depends:
    base,
    ekg-core

benchmark counter
  import: common-all
  main-is: Counter.hs
  type: exitcode-stdio-1.0
  build-depends:
    base,
    ekg-core,
    ekg-core-benchmark,
    criterion ^>= 1.5.9.0
  hs-source-dirs: benchmark-exe
  ghc-options: -O2 -threaded

benchmark distribution
  import: common-all
  main-is: Distribution.hs
  type: exitcode-stdio-1.0
  build-depends:
    base,
    ekg-core,
    ekg-core-benchmark,
    criterion ^>= 1.5.9.0
  hs-source-dirs: benchmark-exe
  ghc-options: -O2 -threaded

test-suite ekg-core-test
  import: common-all
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  other-modules:
    Counter
    Distribution
    State
    Store
  build-depends:
    base,
    ekg-core,
    ekg-core-benchmark,
    async ^>= 2.2.1,
    containers >= 0.5 && < 0.7,
    hspec ^>= 2.8.2,
    hspec-smallcheck ^>= 0.5.2,
    HUnit ^>= 1.6.2.0,
    QuickCheck ^>= 2.14.2,
    smallcheck ^>= 1.2.1,
    text < 1.3,
    unordered-containers < 0.3
  ghc-options: -O2 -threaded -with-rtsopts=-N

test-suite ekg-core-tutorial
  import: common-all, library-build-depends
  type: exitcode-stdio-1.0
  main-is: Tutorial.lhs
  build-depends:
    ekg-core,
    ekg-core-benchmark,
    markdown-unlit
  ghc-options:
    -pgmL markdown-unlit
    -O0
    -fno-ignore-asserts
  build-tool-depends: markdown-unlit:markdown-unlit

source-repository head
  type:     git
  location: https://github.com/tibbe/ekg-core.git
